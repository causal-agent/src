#!/bin/sh
set -eu

if [ -n "${SSH_CLIENT:-}" ]; then
	exec pbd -o "$@"
fi

case "$1" in
	(*.gif|*.jpeg|*.jpg|*.png)
		curl -LSs "$1" | imv -
		;;
	(https://youtu.be/*|https://www.youtube.com/watch*|https://twitch.tv/*)
		exec mpv "$1" >/dev/null 2>&1
		;;
	(*)
		exec firefox -new-tab "$1" >/dev/null 2>&1
		;;
esac
